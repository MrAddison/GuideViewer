<Window x:Class="Guideviewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:guideviewer="clr-namespace:Guideviewer"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="350" 
        Width="1600" 
        ResizeMode="NoResize" 
        SizeToContent="WidthAndHeight">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1583*"/>
            <ColumnDefinition Width="11*"/>
        </Grid.ColumnDefinitions>
        <DataGrid Name="MyDataGrid" 
                  Margin="0,25,0,0"  
                  Padding="3"
                  Background="#FF212121" 
                  SelectionUnit="Cell" 
                  VerticalGridLinesBrush="Black"
                  VerticalScrollBarVisibility="Hidden" 
                  GridLinesVisibility="None" 
                  HeadersVisibility="Column" 
                  MaxWidth="1600" 
                  MaxHeight="900" 
                  MaxColumnWidth="320" 
                  CanUserReorderColumns="False" 
                  CanUserSortColumns="False" 
                  Grid.ColumnSpan="2"
                  IsReadOnly="True"
                  />

        <Menu HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" Width="1594" IsMainMenu="True" Grid.ColumnSpan="2">
            <MenuItem Header="Options" x:Name="Options">
                <MenuItem Header="Save" Click="SaveToFile_OnClick"></MenuItem>
                <MenuItem Header="Load" Click="LoadFile_OnClick"></MenuItem>
            </MenuItem>
            <MenuItem Header="Delete first row" Click="DeleteFirstRow_OnClick" />
            <MenuItem Header="Load progress:" x:Name="Progress" Click="LoadProgress_OnClick"/>
            <TextBox Name="Box" Height="23" TextWrapping="Wrap" Width="273" Padding="0,2,0,0" />
        </Menu>
    </Grid>
</Window>

